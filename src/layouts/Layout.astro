--- 
import { SEO } from 'astro-seo';
import { ViewTransitions } from 'astro:transitions';
import '../styles/tailwind.css';
import Navigation from '../components/layout/navigation/Navigation.svelte';
import SiteLogo from '../components/SiteLogo.astro'
import Container from '../components/layout/Container.astro';

export interface Props {
    seo: {
        title: string;
        description: string;
    };
}

const { seo } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
	<head>
		<SEO title={seo.title} description={seo.description} />
		<meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<ViewTransitions />
	</head>
	<body class="bg-body-color relative overflow-hidden">
		<Container>
			<Navigation client:load transition:name='navigation' transition:persist>
				<SiteLogo slot="siteLogo"/>
			</Navigation>
			<slot />
		</Container>
	</body>
</html>
