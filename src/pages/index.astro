---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import HeaderImg from '../images/homepage_hero_img.png'
import Button from '../components/buttons/Button.svelte';
import BenefitCard from '../components/cards/BenefitCard.svelte';
import PortfolioRow from '../components/PortfolioRow.svelte'
import ServicesTabs from '../components/ServicesTabs.svelte';
import ImgBackground from '../components/ImgBackground.svelte';

const seo = {
	title: 'Homepage Title',
	description: 'Homepage description m8'
}
---

<Layout {seo}>
	<main>
    <header class="grid grid-cols-1 md:grid-cols-2 items-center gap-32 md:gap-14 py-20 md:py-16">
      <div class="grid gap-7">
        <h1 class="lg:text-[65px] text-center md:text-left">Grow Better <br />& Engage More</h1>
        <p class="text-center md:text-left">
          Reach your audience, convert more customers, and rank higher with the best website for you.
        </p>
        <Button type="link" link="/showcase" classes="justify-self-center md:justify-self-start"
          >Showcase</Button>
      </div>
      <div class="relative grid justify-center md:justify-normal">
        <Image
          src={HeaderImg}
          width="541"
          height="486"
          alt="laptop and mobile phone mockup of modern website"
          class="relative z-[1]" 
          loading="eager" />
        <ImgBackground classes="absolute -z-0 -top-[90px] -right-[170px] w-[150%] h-[150%]" />
      </div>
    </header>
    <section id="benefitsRow" class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-[125px]">
      <BenefitCard lottiePath="/lottie/BarChart_primary.json" initialPlay client:load>
        <span slot="heading">Multiply your conversions</span>
        <span slot="body">
          Using the best UX research and insights, we can turn your web dud in to a web stud.
        </span>
      </BenefitCard>
      <BenefitCard lottiePath="/lottie/Globe_tertiary.json" delay={750} initialPlay client:load>
        <span slot="heading">Reach users faster</span>
        <span slot="body">
          Our websites load faster than 99.9% of competitors. With our tech, your users donâ€™t have to
          wait long.
        </span>
      </BenefitCard>
      <BenefitCard lottiePath="/lottie/Server_secondary.json" delay={1500} initialPlay client:load>
        <span slot="heading">0% Downtime</span>
        <span slot="body">
          In the last 3 years, our websites have a 0% downtime - never miss out on opportunities.
        </span>
      </BenefitCard>
    </section>
    <PortfolioRow client:load />
    <ServicesTabs client:load />
	</main>
</Layout>

